<% if current_user %>
<h1>Listing twoots</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twoots.each do |twoot| %>
      <tr>
        <td><%= twoot.content %></td>
        <td><%= twoot.user.email %></td>
        <td><%= link_to 'Show', twoot %></td>
        <td><% if twoot.user.id == current_user.id %>
              <%= link_to 'Edit', edit_twoot_path(twoot) %>
            <% end %></td>
        <td><% if twoot.user.id == current_user.id %>
              <%= link_to 'Destroy', twoot, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Twoot', new_twoot_path %><br><br>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% else %>
You need to be logged in to view this page!<br><%= link_to "Sign in", new_user_session_path %>
<% end %> 